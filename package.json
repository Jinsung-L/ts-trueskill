{
  "name": "ts-trueskill",
  "version": "1.0.5",
  "description": "Port of trueskill package written in TypeScript",
  "main": "index.js",
  "repository": "https://github.com/scttcper/ts-trueskill.git",
  "author": "Scott Cooper <scttcper@gmail.com>",
  "license": "MIT",
  "scripts": {
    "build": "tsc -p .",
    "build:watch": "tsc -p . -w",
    "test": "mocha --require ts-node/register test/*.spec.ts",
    "coverage": "nyc npm test",
    "docs": "typedoc --out docs src; touch docs/.nojekyll",
    "lint": "tslint \"src/**/*.ts\""
  },
  "dependencies": {
    "gaussian": "^1.1.0",
    "lodash": "^4.17.4",
    "mathjs": "^3.8.1",
    "uuid": "^3.0.1"
  },
  "devDependencies": {
    "@types/chai": "^3.4.34",
    "@types/gaussian": "^1.1.0",
    "@types/lodash": "^4.14.47",
    "@types/mathjs": "^0.0.32",
    "@types/mocha": "^2.2.36",
    "@types/node": "^6.0.58",
    "@types/uuid": "^2.0.29",
    "chai": "^3.5.0",
    "coveralls": "^2.11.15",
    "mocha": "^3.2.0",
    "nyc": "^10.0.0",
    "ts-node": "^2.0.0",
    "tslint": "^4.3.1",
    "typedoc": "^0.5.3",
    "typescript": "^2.1.4"
  },
  "nyc": {
    "sourceMap": true,
    "instrument": true,
    "require": [
      "ts-node/register"
    ],
    "include": [
      "src/**/*.ts"
    ],
    "extension": [
      ".ts"
    ],
    "reporter": [
      "lcov",
      "text"
    ],
    "exclude": []
  },
  "engines" : { "node" : ">=6" }
}
