{
  "name": "ts-trueskill",
  "version": "0.0.1",
  "description": "typescript trueskill port",
  "main": "build/src/index.js",
  "repository": "https://github.com/scttcper/ts-trueskill.git",
  "author": "Scott Cooper <scttcper@gmail.com>",
  "license": "MIT",
  "scripts": {
    "build": "tsc -p .",
    "build:watch": "tsc -p . -w",
    "test": "mocha --require ts-node/register test/*.spec.ts",
    "coverage": "nyc npm test",
    "lint": "tslint \"src/**/*.ts\""
  },
  "dependencies": {
    "gaussian": "^1.1.0",
    "mathjs": "^3.8.0",
    "node-matrices": "^1.0.0",
    "uuid": "^3.0.1"
  },
  "devDependencies": {
    "@types/chai": "^3.4.34",
    "@types/lodash": "^4.14.43",
    "@types/mathjs": "^0.0.31",
    "@types/mocha": "^2.2.33",
    "@types/node": "^0.0.2",
    "@types/uuid": "^2.0.29",
    "chai": "^3.5.0",
    "coveralls": "^2.11.15",
    "lodash": "^4.17.2",
    "mocha": "^3.2.0",
    "nyc": "^10.0.0",
    "ts-node": "^1.7.2",
    "tslint": "^4.0.2",
    "typescript": "^2.1.4"
  },
  "nyc": {
    "sourceMap": true,
    "instrument": true,
    "require": [
      "ts-node/register"
    ],
    "include": [
      "src/**/*.ts"
    ],
    "extension": [
      ".ts"
    ],
    "reporter": [
      "lcov",
      "text"
    ],
    "exclude": []
  }
