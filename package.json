{
  "name": "ts-trueskill",
  "version": "1.5.0",
  "description": "Port of python trueskill package in TypeScript",
  "main": "./bundles/ts-trueskill.umd.js",
  "module": "./bundles/ts-trueskill.es5.js",
  "typings": "./public_api.d.ts",
  "repository": "https://github.com/scttcper/ts-trueskill.git",
  "author": "Scott Cooper <scttcper@gmail.com>",
  "license": "MIT",
  "scripts": {
    "benchmark": "npm run build; tsc -p benchmark; node benchmark-out/benchmark",
    "lint": "tslint -p tsconfig.json -t codeFrame 'src/**/*.ts' 'test/**/*.ts'",
    "lint:fix": "tslint -p tsconfig.json -t codeFrame --fix 'src/**/*.ts' 'test/**/*.ts'",
    "lint-staged": "lint-staged",
    "prebuild": "rimraf dist",
    "build": "tsc -p tsconfig.json && tsc -p tsconfig.esm.json && tsc -p tsconfig.umd.json && ts-node ./build.ts",
    "build:docs": "typedoc --out docs --target es6 --theme minimal --mode file src && touch docs/.nojekyll",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:prod": "npm run test -- --coverage --no-cache",
    "commit": "git-cz",
    "commitlint": "commitlint -e $GIT_PARAMS",
    "travis-deploy-once": "travis-deploy-once",
    "semantic-release": "cd dist/package-dist && semantic-release"
  },
  "dependencies": {
    "gaussian": "^1.1.0",
    "mathjs": "^4.0.0",
    "tslib": "^1.9.0",
    "lodash": "^4.17.5",
    "uuid": "^3.2.1"
  },
  "devDependencies": {
    "@commitlint/cli": "^6.1.3",
    "@commitlint/config-conventional": "^6.1.3",
    "@types/benchmark": "^1.0.31",
    "@types/fs-extra": "^5.0.1",
    "@types/jest": "^22.1.4",
    "@types/lodash": "^4.14.104",
    "@types/mathjs": "^0.0.38",
    "@types/node": "^9.4.6",
    "@types/uuid": "^3.4.3",
    "benchmark": "^2.1.4",
    "commitizen": "^2.9.6",
    "cz-conventional-changelog": "^2.1.0",
    "fs-extra": "^5.0.0",
    "husky": "^0.15.0-rc.8",
    "jest": "^22.4.2",
    "lint-staged": "^7.0.0",
    "prettier": "^1.11.1",
    "rimraf": "^2.6.2",
    "rollup": "^0.56.4",
    "rollup-plugin-sourcemaps": "^0.4.2",
    "semantic-release": "^15.0.0",
    "travis-deploy-once": "^4.3.4",
    "ts-jest": "^22.4.1",
    "ts-node": "^5.0.1",
    "tslint": "^5.9.1",
    "tslint-config-prettier": "^1.9.0",
    "tslint-config-standard": "^7.0.0",
    "typedoc": "^0.11.0",
    "typescript": "^2.7.2"
  },
  "release": {
    "branch": "master"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint-staged",
      "commit-msg": "npm run commitlint"
    }
  },
  "lint-staged": {
    "*.ts": [
      "prettier --write",
      "git add"
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "jest": {
    "transform": {
      ".(ts|tsx)": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|tsx|js)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "coveragePathIgnorePatterns": [
      "<rootDir>/node_modules/",
      "<rootDir>/test/"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": -10
      }
    },
    "collectCoverage": true
  },
  "keywords": [
    "typescript",
    "trueskill",
    "player skill"
  ]
}
